#include <iostream>
using namespace std;

int main()
{
	int n,x;
	cin>>n;
	int a[4]={0};
	while(n--)
	{
	cin>>x;
	a[x]++;
	}
	int sum;
	
	sum+=a[3];
	
	if(a[1]%2==0)
	sum+=a[1]/2;
	else
	sum+=a[1]/2+1;
	
	if(a[0]<a[2])
	{
	sum+=a[0];
	sum+=a[2]-a[0];
	}
	else
	{
		sum+=a[2]-a[0];
		sum+=a[0]/4;
		if(a[0]%4!=0)
		sum++;
	}
	cout<<sum<<endl;
	return 0;
}